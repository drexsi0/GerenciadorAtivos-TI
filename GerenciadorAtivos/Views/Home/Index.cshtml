@model GerenciadorAtivos.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";

    // --- PROCESSAMENTO DE DADOS DO GRÁFICO DE SETOR ---
    // Precisamos separar: O que mostramos (Nome) do que usamos no link (ID)
    var labelsSetor = new List<string>();
    var dataSetor = new List<int>();
    var idsSetor = new List<string>(); // Guarda o ID "1", "2" para o redirecionamento

    // Pega a lista oficial de nomes dos setores
    var listaSetores = Html.GetEnumSelectList<GerenciadorAtivos.Models.SetorAtivo>();

    foreach (var item in Model.AtivosPorSetor)
    {
        // item.Key vem como "1", "2" (ID do banco)
        // item.Value é a quantidade

        // Tenta achar o nome bonito baseado no ID
        var nomeBonito = listaSetores.FirstOrDefault(x => x.Value == item.Key)?.Text ?? item.Key;

        labelsSetor.Add(nomeBonito); // Mostra "TI - Infraestrutura"
        idsSetor.Add(item.Key);      // Guarda "2"
        dataSetor.Add(item.Value);   // Guarda 5
    }
}

<div class="text-center mb-5">
    <h1 class="display-4">Visão Geral</h1>
    <p class="text-muted">Monitoramento de Ativos de TI em Tempo Real</p>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3 shadow">
            <div class="card-header">Total de Ativos</div>
            <div class="card-body">
                <h2 class="card-title text-center">@Model.TotalAtivos</h2>
                <p class="card-text text-center"><small>Cadastrados</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-header">Disponíveis</div>
            <div class="card-body">
                <h2 class="card-title text-center">@Model.Disponiveis</h2>
                <p class="card-text text-center"><small>No Estoque</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow">
            <div class="card-header">Em Uso</div>
            <div class="card-body">
                <h2 class="card-title text-center">@Model.EmUso</h2>
                <p class="card-text text-center"><small>Com Colaboradores</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-warning mb-3 shadow">
            <div class="card-header">Manutenção</div>
            <div class="card-body">
                <h2 class="card-title text-center">@Model.EmManutencao</h2>
                <p class="card-text text-center"><small>Atenção Necessária</small></p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ativos por Setor</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="graficoSetor"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Distribuição de Status</h6>
            </div>                                                          
            <div class="card-body">
                <div class="chart-pie">
                    <canvas id="graficoStatus"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-controller="Ativos" asp-action="Index" class="btn btn-lg btn-outline-dark">
        Gerenciar Inventário Completo &rarr;
    </a>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // --- GRÁFICO DE SETOR (BARRAS) ---
        var ctxSetor = document.getElementById('graficoSetor').getContext('2d');

        // Injetando os Arrays processados no C#
        var labelsSetor = @Html.Raw(Json.Serialize(labelsSetor));
        var dataSetor = @Html.Raw(Json.Serialize(dataSetor));
        var idsSetor = @Html.Raw(Json.Serialize(idsSetor)); // Array oculto de IDs

        new Chart(ctxSetor, {
            type: 'bar',
            data: {
                labels: labelsSetor, // Mostra o Nome (Ex: TI - Infra)
                datasets: [{
                    label: 'Quantidade',
                    data: dataSetor,     // Mostra o Valor (Ex: 5)
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } },

                // LÓGICA DE CLIQUE INTELIGENTE
                onClick: (evt, activeElements) => {
                    if (activeElements.length > 0) {
                        const index = activeElements[0].index;

                        // O Pulo do Gato: Pegamos o ID do array oculto, não o Label
                        const setorId = idsSetor[index];

                        // Redireciona enviando o ID ("2") que o filtro entende
                        window.location.href = '/Ativos?setorFilter=' + encodeURIComponent(setorId);
                    }
                },
                onHover: (event, chartElement) => {
                    event.native.target.style.cursor = chartElement[0] ? 'pointer' : 'default';
                }
            }
        });

        // --- GRÁFICO DE STATUS (ROSCA) ---
        // (Status geralmente já vem com o nome certo do Enum, mantemos a lógica padrão)
        var ctxStatus = document.getElementById('graficoStatus').getContext('2d');
        var dadosStatus = @Html.Raw(Json.Serialize(Model.AtivosPorStatus));

        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: Object.keys(dadosStatus),
                datasets: [{
                    data: Object.values(dadosStatus),
                    backgroundColor: ['#198754', '#0d6efd', '#ffc107', '#6c757d'],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                onClick: (evt, activeElements) => {
                    if (activeElements.length > 0) {
                        const index = activeElements[0].index;
                        const statusNome = Object.keys(dadosStatus)[index];
                        window.location.href = '/Ativos?statusFilter=' + encodeURIComponent(statusNome);
                    }
                },
                onHover: (event, chartElement) => {
                    event.native.target.style.cursor = chartElement[0] ? 'pointer' : 'default';
                }
            }
        });
    </script>
}