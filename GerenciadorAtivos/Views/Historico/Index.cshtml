@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<GerenciadorAtivos.Models.Historico>

@{
    ViewData["Title"] = "Auditoria";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Log de Auditoria</h1>
        <p class="text-muted">Histórico de todas as movimentações do sistema.</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="thead-azul">
                <tr>
                    <th>Data/Hora</th>
                    <th>Usuário</th>
                    <th>Ação</th>
                    <th>Ativo Relacionado</th>
                    <th>Detalhes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DataAcao.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>
                            <i class="bi bi-person-circle"></i> @item.Usuario
                        </td>
                        <td>
                            @{
                                var corBadge = "bg-secondary";
                                if (item.TipoAcao == "Criação") { corBadge = "bg-success"; }
                                else if (item.TipoAcao == "Atualização") { corBadge = "bg-primary"; }
                                else if (item.TipoAcao == "Exclusão") { corBadge = "bg-danger"; }
                            }
                            <span class="badge @corBadge">@item.TipoAcao</span>
                        </td>
                        <td>
                            @if (item.Ativo != null)
                            {
                                <a asp-controller="Ativos" asp-action="Details" asp-route-id="@item.AtivoId" class="text-decoration-none fw-bold">
                                    @item.Ativo.Nome
                                </a>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Ativo Excluído</span>
                            }
                        </td>
                        <td class="text-muted small">@item.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center mt-4 gap-3">
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" class="btn btn-outline-primary @prevDisabled">
        &laquo; Anterior
    </a>
    <span class="fw-bold text-muted">Página @Model.PageNumber de @Model.PageCount</span>
    <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" class="btn btn-outline-primary @nextDisabled">
        Próximo &raquo;
    </a>
</div>