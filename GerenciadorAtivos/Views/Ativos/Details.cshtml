@model GerenciadorAtivos.Models.Ativo

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Ativo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patrimonio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patrimonio)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tipo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tipo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Marca)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Setor)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Setor)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
    </dl>
</div>

<hr class="my-4" />
<h4 class="mb-3"><i class="fa fa-history"></i> Histórico de Movimentações</h4>

@if (Model.Historicos != null && Model.Historicos.Any())
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered">
            <thead class="table-light">
                <tr>
                    <th style="width: 180px;">Data/Hora</th>
                    <th style="width: 150px;">Ação</th>
                    <th>Detalhes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hist in Model.Historicos.OrderByDescending(x => x.DataAcao))
                {
                    <tr>
                        <td class="text-muted small">@hist.DataAcao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (hist.TipoAcao == "Criação")
                            {
                                <span class="badge bg-success">Criação</span>
                            }
                            else if (hist.TipoAcao == "Atualização")
                            {

                                <span class="badge bg-warning text-dark">Edição</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary">@hist.TipoAcao</span>
                            }
                        </td>
                        <td class="small">@hist.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-light text-center border">
        <span class="text-muted">Nenhum histórico registrado para este ativo ainda.</span>
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar para Lista</a>
</div>