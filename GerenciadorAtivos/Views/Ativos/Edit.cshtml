@model GerenciadorAtivos.Models.Ativo

@{
    ViewData["Title"] = "Editar Ativo";
}

<h1>Editar Ativo</h1>

<h4>Atualizar Informações</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Patrimonio" class="control-label"></label>
                <input asp-for="Patrimonio" class="form-control" />
                <span asp-validation-for="Patrimonio" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<GerenciadorAtivos.Models.TipoAtivo>()"></select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Setor" class="control-label"></label>
                    <select asp-for="Setor" class="form-select" asp-items="Html.GetEnumSelectList<GerenciadorAtivos.Models.SetorAtivo>()">
                    </select>
                    <span asp-validation-for="Setor" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Modelo" class="control-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<GerenciadorAtivos.Models.StatusAtivo>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}