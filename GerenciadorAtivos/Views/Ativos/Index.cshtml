@model IEnumerable<GerenciadorAtivos.Models.Ativo>

@{
    ViewData["Title"] = "Listagem de Ativos";

    // 1. TRUQUE DO DROPDOWN (Memória)
    // Pega a lista padrão do Enum
    var listaStatus = Html.GetEnumSelectList<GerenciadorAtivos.Models.StatusAtivo>();

    // Verifica qual estava selecionado (converte para número texto, ex: "1")
    var statusSelecionado = ViewData["CurrentStatus"] != null
                            ? ((int)ViewData["CurrentStatus"]).ToString()
                            : "";

    // Marca o item correto como "selected"
    foreach (var item in listaStatus)
    {
        if (item.Value == statusSelecionado)
        {
            item.Selected = true;
            break;
        }
    }
}

<style>
    .thead-azul th {
        background-color: #004aad !important;
        color: white !important;
    }
</style>

<h1>Inventário de TI</h1>

<div class="row mt-3 mb-4 align-items-center">
    <div class="col-md-6 mb-2 mb-md-0">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
            Início
        </a>
        <a asp-action="Create" class="btn btn-primary">
            Novo Ativo
        </a>
    </div>

    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex gap-2 justify-content-end">

            <select name="statusFilter" class="form-select" style="max-width: 160px;"
                    asp-items="listaStatus">
                <option value="">Todos Status</option>
            </select>

            <input type="text" name="searchString" class="form-control"
                   placeholder="Nome ou Patrimônio..."
                   value="@ViewData["CurrentFilter"]" />

            <button type="submit" class="btn btn-primary">
                Buscar
            </button>

            <a asp-action="Index" class="btn btn-outline-dark">
                Limpar
            </a>
        </form>
    </div>
</div>

<table class="table table-hover table-striped">
    <thead class="thead-azul">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Patrimonio)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Setor)</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nome)</td>
                <td><code>@Html.DisplayFor(modelItem => item.Patrimonio)</code></td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Setor)</td>
                <td>
                    @{
                        string corBadge = "bg-secondary";
                        if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Disponivel) { corBadge = "bg-success"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.EmUso) { corBadge = "bg-primary"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Manutencao) { corBadge = "bg-warning text-dark"; }
                        else if (item.Status == GerenciadorAtivos.Models.StatusAtivo.Descartado) { corBadge = "bg-danger"; }
                    }
                    <span class="badge @corBadge">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>