@{
    ViewData["Title"] = "Central de Relatórios";
}

<div class="text-center mb-5">
    <h1 class="display-5">Relatórios Gerenciais</h1>
    <p class="text-muted">Exporte dados para análise externa</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow hover-effect">
            <div class="card-body text-center p-5">
                <i class="bi bi-file-earmark-excel text-success display-1 mb-3"></i>
                <h3 class="card-title">Relatório Geral de Ativos</h3>
                <p class="card-text text-muted">
                    Exporta lista completa de ativos cadastrados no formato .xlsx (Excel).
                    Inclui status, setor e detalhes técnicos.
                </p>
                <a asp-action="ExportarAtivosExcel" class="btn btn-success btn-lg mt-3">
                    <i class="bi bi-download"></i> Baixar Excel
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card shadow hover-effect border-light">
            <div class="card-body text-center p-5 opacity-50">
                <i class="bi bi-file-earmark-pdf text-danger display-1 mb-3"></i>
                <h3 class="card-title">Relatório em PDF</h3>
                <p class="card-text text-muted">
                    Ficha técnica detalhada para impressão e assinatura.
                </p>
                <button class="btn btn-secondary btn-lg mt-3" disabled>
                    Em Breve
                </button>
            </div>
        </div>
    </div>
</div>